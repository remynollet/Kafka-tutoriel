{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/User",
    "definitions": {
        "User": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "description": " Name of the user"
                },
                "surname": {
                    "type": "string",
                    "description": " Surname of the user"
                },
                "uid": {
                    "type": "string",
                    "pattern": "^[A-Z,a-z][{5}[0-9]{2}$",
                    "description": " Decathlon Unique Identifier of the user"
                },
                "birthdate": {
                    "type": "string",
                    "format": "date",
                    "description": " Birthdate of the user"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": " Email of the user"
                },
                "address": {
                    "$ref": "#/definitions/Address",
                    "description": " Address of the user"
                }
            },
            "required": [
                "address",
                "birthdate",
                "email",
                "name",
                "surname",
                "uid"
            ],
            "title": "User"
        },
        "Address": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "address_id": {
                    "type": "string",
                    "format": "integer"
                },
                "number": {
                    "type": "string",
                    "format": "integer"
                },
                "streetname": {
                    "type": "string"
                },
                "cityname": {
                    "type": "string"
                },
                "postalcode": {
                    "type": "string",
                    "format": "integer"
                }
            },
            "required": [
                "address_id",
                "cityname",
                "number",
                "postalcode",
                "streetname"
            ],
            "title": "Address"
        }
    }
}
